{
  "name": "pushserbia-fe",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run generate:release && ng build && npm run sourcemaps:move && npm run sentry:sourcemaps",
    "sourcemaps:move": "rm -rf ./sourcemaps && mkdir ./sourcemaps && mv ./dist/pushserbia-fe/browser/*.map ./sourcemaps && mv ./dist/pushserbia-fe/server/*.map ./sourcemaps",
    "version": "jq -r .version package.json",
    "release": "node -e \"console.log('pushserbia-fe@' + require('./package.json').version + '-' + Math.random().toString(36).substring(2, 8))\"",
    "generate:release": "node -e \"const fs=require('fs'); const release='pushserbia-fe@' + require('./package.json').version + '-' + Math.random().toString(36).substring(2, 8); fs.writeFileSync('./src/environments/release.ts', 'export const release = \\'' + release + '\\';'); console.log('Generated release:', release)\"",
    "sentry:sourcemaps": "RELEASE=$(npm run release --silent) && echo $RELEASE && ./node_modules/.bin/sentry-cli sourcemaps inject --org pushserbia --project pushserbia-fe --release=$RELEASE ./sourcemaps && sentry-cli releases new $RELEASE && sentry-cli sourcemaps upload --org pushserbia --project pushserbia-fe --release=$RELEASE ./sourcemaps",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:pushserbia-fe": "node dist/pushserbia-fe/server/server.mjs",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.0",
    "@angular/common": "^19.1.0",
    "@angular/compiler": "^19.1.0",
    "@angular/core": "^19.1.0",
    "@angular/fire": "^19.0.0",
    "@angular/forms": "^19.1.0",
    "@angular/platform-browser": "^19.1.0",
    "@angular/platform-browser-dynamic": "^19.1.0",
    "@angular/platform-server": "^19.1.0",
    "@angular/router": "^19.1.0",
    "@angular/ssr": "^19.1.7",
    "@sentry/angular": "^9.5.0",
    "@sentry/cli": "^2.42.2",
    "@tailwindcss/postcss": "^4.0.14",
    "express": "^4.18.2",
    "flowbite": "^3.1.2",
    "ngx-quill": "^27.0.1",
    "postcss": "^8.5.3",
    "rxjs": "~7.8.0",
    "slugify": "^1.6.6",
    "tailwindcss": "^4.0.14",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.7",
    "@angular/cli": "^19.1.7",
    "@angular/compiler-cli": "^19.1.0",
    "@faker-js/faker": "^9.6.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "angular-eslint": "19.3.0",
    "eslint": "^9.23.0",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.5.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.27.0"
  }
}
